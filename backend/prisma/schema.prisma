// 1. กำหนดชนิดของฐานข้อมูล
datasource db {
  provider = "postgresql" 
  url      = env("DATABASE_URL")
}

// 2. กำหนดให้ Prisma สร้าง Client สำหรับ JavaScript
generator client {
  provider = "prisma-client-js"
}

// 3. ออกแบบ Models (Prisma จะนำไปสร้างเป็นตารางใน PostgreSQL)
model User {
  id           String    @id @default(cuid())
  email        String    @unique
  password     String? // Optional for social login
  role         Role
  authProvider String    @default("local")
  socialId     String?   @unique
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  // ความสัมพันธ์: User 1 คน มีได้ 1 Profile (ถ้าไม่ใช่ Admin)
  candidateProfile CandidateProfile?
  companyProfile   CompanyProfile?
}

model CandidateProfile {
  id               String        @id @default(cuid())
  user             User          @relation(fields: [userId], references: [id])
  userId           String        @unique // Foreign Key
  fullName         String
  contactEmail     String
  lineUserId       String?
  education        String?
  bio              String?
  youtubeIntroLink String?
  applications     Application[]
  skills           UserSkill[]
}

model CompanyProfile {
  id                  String   @id @default(cuid())
  user                User     @relation(fields: [userId], references: [id])
  userId              String   @unique
  companyName         String
  about               String?
  contactInstructions String
  jobs                Job[]
}

model Job {
  id                String        @id @default(cuid())
  company           CompanyProfile @relation(fields: [companyProfileId], references: [id])
  companyProfileId  String
  title             String
  jobCategoryCode   String
  description       String
  applications      Application[]
}

model Application {
  id                 String           @id @default(cuid())
  job                Job              @relation(fields: [jobId], references: [id])
  jobId              String
  candidate          CandidateProfile @relation(fields: [candidateProfileId], references: [id])
  candidateProfileId String
  applicationCode    String           @unique
  status             ApplicationStatus @default(APPLIED)
  createdAt          DateTime         @default(now())
}

// เพิ่ม Model ใหม่สำหรับเก็บชื่อ Skill
model Skill {
  id   String @id @default(cuid())
  name String @unique // ชื่อ Skill เช่น "React", "Python", "Figma"

  users UserSkill[]
}

// เพิ่ม Model ใหม่สำหรับเป็นตารางกลาง
model UserSkill {
  id        String @id @default(cuid())
  rating    Int    // ระดับความถนัด 1-10

  candidateProfile   CandidateProfile @relation(fields: [candidateProfileId], references: [id])
  candidateProfileId String

  skill   Skill  @relation(fields: [skillId], references: [id])
  skillId String

  @@unique([candidateProfileId, skillId]) // ป้องกันการใส่ Skill ซ้ำในคนเดียว
}

enum Role {
  CANDIDATE
  COMPANY
  ADMIN
}

enum ApplicationStatus {
  APPLIED
  COMPANY_INTERESTED
}